.container .main {
  padding-top: 16rpx;
  background-color: #fff;
}
.main .preview {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.main .preview .original-wrap {
  width: 600rpx;
  overflow: hidden;
  position: relative;
}
.main .preview .canvas {
  position:absolute;
  left: 200%;
}
.main .original-wrap image {
  width: 100%;
  height: 100%;
  vertical-align: middle;
}
.main .preview .bg-wrap {
  width: 600rpx;
  height: 600rpx;
  border: 1px dashed #EFEFEF;
  overflow: hidden;
  position: relative;
}
.main .bg-wrap image{
  width: 300rpx;
  height: 300rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
}
.main .preview .sticker {
  width: 200rpx;
  height: 200rpx;
  position: absolute;
  border: 1px dashed #8992c8;
}
.main .preview .btn {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
}

.text-msg {
  margin-top: 40rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: #95A1AF;
  text-align: center;
}

.main .btn-wrap {
  margin-top: 20rpx;
  padding-bottom: 40rpx;
  display: flex;
  justify-content: center;
}
.main .btn-wrap .btn {
  width: 120rpx;
  height: 120rpx;
  margin: 0 40rpx;
  padding: 0;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  background-color: #fff;
  color: #0E0E0E;
  font-size: 24rpx;
  font-weight: 400;
}
.main .btn-wrap .btn image {
  height: 60rpx;
}
.main .btn-wrap .btn .btn-image {
  height: 130rpx;
}

.container .footer {
  height: 180rpx;
  width: 750rpx;
  position: fixed;
  bottom: 0;
}
.container .footer-msg {
  width: 100%;
  position: absolute;
  bottom: 20rpx;
  font-size: 24rpx;
  font-weight: 400;
  text-align: center;
  color: #95A1AF;
}
.container .footer .switch-wrap {
  background-color: #F9F9F9;
  display: flex;
  height: 60rpx;
  margin-left: 20rpx;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}
.container .footer .switch-item {
  display: flex;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 26rpx;
  padding: 0 20rpx;
  color: #cdcdcd;
}
.container .footer .switch-item.active {
  color: #8992c8;
  background-color: #fff;
}
.container .footer .switch-icon {
  width: 60rpx;
  height: 60rpx;
}
.container .footer .scroll-wrap {
  background-color: #fff;
  white-space: nowrap;
  height: 120rpx;
}
.container .footer .scroll-wrap image {
  display: inline-block;
  width: 120rpx;
  height: 120rpx;
  margin: 0 20rpx;
}
